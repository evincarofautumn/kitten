name: Kitten
version: 0.1.0.0
synopsis: Kitten Programming Language
homepage: http://kittenlang.org/
license: MIT
author: Jon Purdy
maintainer: evincarofautumn@gmail.com
category: Language
build-type: Simple
cabal-version: >=1.10

data-files: common.ktn

executable kitten
  build-depends:

    base >=4.8,

    Kitten,
    bytestring,
    cmdargs,
    containers,
    hashable,
    haskeline,
    parsec,
    pretty,
    text,
    transformers,
    unordered-containers,
    vector

  default-language: Haskell2010
  ghc-options: -Wall -O2
  hs-source-dirs: src
  main-is: Main.hs

  other-modules:
    Arguments
    Interact
    Paths_Kitten
    Report

library

  build-depends:

    base >=4.8,

    JuicyPixels,
    base64-bytestring,
    bytestring,
    containers,
    hashable,
    parsec,
    pretty,
    text,
    transformers,
    unordered-containers,
    vector

  if !impl(ghc >= 8.0)
    build-depends:
      fail,
      semigroups

  default-language: Haskell2010

  exposed-modules:

    Kitten

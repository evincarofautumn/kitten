  map or

// Whether a floating-point number is even.
def evenFloat (float -> bool):
  -> x; x %. 2.0 =. 0.0

// Whether an integer is even.
def evenInt (int -> bool):
  -> x; x % 2 = 0

// The maximum of two integers.
def maxInt (int int -> int):
  -> a b;
  if (a > b) {a} else {b}


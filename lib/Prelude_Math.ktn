// Absolute value of an integer.
def absInt (int -> int):
  -> x;
  if (x < 0):
    x negInt
  else:
    x

// Absolute value of a floating-point number.
def absFloat (float -> float):
  -> x;
  if (x <. 0.0):
    x negFloat
  else:
    x

